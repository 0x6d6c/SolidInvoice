{% extends 'CSBillCoreBundle:Layout:single_column.html.twig' %}

{% block title %}
	{{ "Login"|trans }}
{% endblock title %}

{% block content %}
	<fieldset>
	    <div class="row">
			<div class="col-lg-offset-2 col-md-offset-2 col-lg-8 col-md-8">
			    {% if error %}
			        <div class="alert alert-danger">
			        	<button class="close" data-dismiss="alert">x</button>
			        	{{ error.message }}
			        </div>
			    {% endif %}

			    <div class="well">
				    <form action="{{ path("fos_user_security_check") }}" method="post" id="login" role="form">
				        <div class="form-group">
				            <label for="username">{{ "Username"|trans }}</label>
                            <div class="input-group">
                                <span class="input-group-addon">
                                    {{ icon('user') }}
                                </span>
                                <input class="form-control" type="text" id="username" name="_username" placeholder="{{ "Username"|trans }}" value="{{ last_username }}" required="required" />
                            </div>
				        </div>

				        <div class="form-group">
				            <label for="password">{{ "Password"|trans }}</label>
                            <div class="input-group">
                                <span class="input-group-addon">
                                    {{ icon('lock') }}
                                </span>
                                <input class="form-control" type="password" id="password" placeholder="{{ "Password"|trans }}" name="_password" required="required" />
                            </div>
				        </div>

				        <div class="checkbox">
							<label for="remember_me" class="checkbox-inline">
                                <input type="checkbox" id="remember_me" name="_remember_me" checked />
                                {{ "Keep me logged in"|trans }}
                            </label>
						</div>

    					<div class="clear">
				        	<button type="submit" class="btn btn-success">{{ icon('key') }} {{ "Login"|trans }}</button>
				        </div>

                        <input type="hidden" name="_csrf_token" value="{{ csrf_token }}" />
				    </form>

				    <hr />
				    <a href="{{ path("fos_user_resetting_request") }}">{{ "Forgot Password"|trans }}</a>
				</div>
			</div>
		</div>
	</fieldset>
{% endblock content %}
