{% extends "CSBillCoreBundle:Layout:one_column_left.html.twig" %}

{% set title = "installation.title"|trans({"%app_name%" : app_name}) %}

{% block header %}
	{% include "CSBillCoreBundle:Menu:top.html.twig" with {"title" : title|trans} %}
{% endblock header %}

{% block title %}
	{{ title }}
{% endblock title %}

{% block sidebar %}
    <ul class="nav nav-list">
        <li class="nav-header">
            {{ "installation.progess"|trans }}
        </li>
        {% set link = true %}
        {% for index, step in installer.steps %}
            {% set class = not installer.stepComplete(index) ? 'disabled' %}
            {% if installer.currentStep.label is sameas(step.label) %}
                {% set link = false %}
                {% set class = 'active' %}
            {% endif %}
            <li class="{{ class }}">
                <a href="{{ link ? path('_installer_step', {'step' : index}) : '#' }}">{{ ('installation.step.' ~ step.label)|trans }}</a>
            </li>
        {% endfor %}
    </ul>
{% endblock sidebar %}
