{% block database_config_widget %}

    {{ form_errors(form) }}

    <div class="row">
        <div class="col-lg-6 col-md-6">
            {{ form_row(form.driver) }}
        </div>
        <div class="col-lg-6 col-md-6">
            {{ form_row(form.host) }}
        </div>
    </div>

    <div class="row">
        <div class="col-lg-6 col-md-6">
            {{ form_row(form.user) }}
        </div>
        <div class="col-lg-6 col-md-6">
            {{ form_row(form.password) }}
        </div>
    </div>

    <div class="row">
        <div class="col-lg-6 col-md-6">
            {{ form_row(form.name) }}
        </div>
        <div class="col-lg-6 col-md-6">
            {{ form_row(form.port) }}
        </div>
    </div>

    {{ form_rest(form) }}
{% endblock %}

{% block system_information_widget %}
    <div class="row">
        <div class="col-lg-6 col-md-6">
            <fieldset>
                <legend>
                    <h3>{{ "Company Information"|trans }}</h3>
                </legend>

                <div class="company_information">
                    {{ form_row(form.locale) }}
                    {{ form_row(form.currency) }}
                    {#{{ form_row(form.logo) }}#}
                </div>
            </fieldset>
        </div>

        <div class="col-lg-6 col-md-6">
            <fieldset>
                <legend>
                    <h3>{{ "Admin User Information"|trans }}</h3>
                </legend>

                <div class="company_information">
                    {{ form_row(form.username) }}
                    {{ form_row(form.email_address) }}
                    {{ form_row(form.password) }}
                </div>
            </fieldset>
        </div>
    </div>
{% endblock %}
