<div class="col-md-6">
    <div class="panel panel-default">
        <div class="panel-heading">
            <div class="pull-right">
                {% if quotes is not empty %}
                    <a href="{{ path('_quotes_index') }}">
                        {{ 'quote.dashboard.view_all'|trans }}
                    </a>
                {% endif %}
            </div>
            <h3 class="panel-title">
                {{ icon('file-text-o') }} {{ 'quote.dashboard.recent'|trans }}
            </h3>
        </div>
        {% if quotes is not empty %}
            <table class="table table-striped table-bordered">
                <tr>
                    <th>{{ 'quote.dashboard.grid.id'|trans }}</th>
                    <th>{{ 'quote.dashboard.grid.client'|trans }}</th>
                    <th>{{ 'quote.dashboard.grid.status'|trans }}</th>
                    <th>{{ 'quote.dashboard.grid.total'|trans }}</th>
                    <th>{{ 'quote.dashboard.grid.discount'|trans }}</th>
                    <th>{{ 'quote.dashboard.grid.created'|trans }}</th>
                </tr>
                {% for quote in quotes %}
                    <tr>
                        <td>
                            <a href="{{ path('_quotes_view', {'id' : quote.id}) }}">{{ quote.id }}</a>
                        </td>
                        <td>
                            <a href="{{ path('_clients_view', {'id' : quote.client_id}) }}">{{ quote.client }}</a>
                        </td>
                        <td>
                            {{ status_label(quote) }}
                        </td>
                        <td>
                            {{ quote.total|currency }}
                        </td>
                        <td>
                            {{ quote.discount * 100 }}%
                        </td>
                        <td>
                            {{ quote.created|date }}
                        </td>
                    </tr>
                {% endfor %}
            </table>
        {% else %}
            <div class="panel-body">
                <a href="{{ path('_quotes_create') }}">
                    {{ 'quote.dashboard.create'|trans }}
                </a>
            </div>
        {% endif %}
    </div>
</div>
