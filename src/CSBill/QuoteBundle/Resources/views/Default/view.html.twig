{% extends "CSBillCoreBundle:Layout:one_column_left.html.twig" %}

{% block title %}{{ "Quote #%id"|trans|replace({"%id" : quote.id}) }} {{ quote.status|raw }}{% endblock %}

{% block sidebar %}
    {{ menu('quotes_view') }}
{% endblock sidebar %}


{% block content %}

    {# TODO : add toolbar #}
    <div class="row-fluid">
        <div class="pull-right">
            <div class="btn-toolbar">
                <div class="btn-group">
                    {% if quote is pending or quote is draft %}
                        <a href="{{ path('_accept_quote', {'id' : quote.id}) }}" class="btn btn-success">{{ "Accept"|trans }}</a>
                    {% endif %}

                    {% if quote is not accepted and quote is not declined and quote is not cancelled %}
                        <a href="{{ path('_decline_quote', {'id' : quote.id}) }}" class="btn btn-danger">{{ "Decline"|trans }}</a>
                    {% endif %}
                </div>
                <div class="btn-group">
                    <a href="{{ path('_send_quote', {'id' : quote.id}) }}" class="btn btn-info">{{ "Send"|trans }}</a>
                </div>

                {% if quote is draft or quote is pending %}
                    <div class="btn-group">
                        <a href="{{ path('_cancel_quote', {'id' : quote.id}) }}" class="btn btn-inverse">{{ "Cancel"|trans }}</a>
                    </div>
                {% endif %}
            </div>
        </div>
    </div>
    <div class="row-fluid">
        <div class="span6">
            <h4>{{ quote.client }}</h4>

            <ul class="unstyled">
                {% for user in quote.users %}
                    <li>{{ user }}</li>
                {% endfor %}
            </ul>
        </div>
    </div>

    <div class="row-fluid">
        <table class="table table-striped table-hover">
            <thead>
                <tr>
                    <th>
                        {{ "Code"|trans }}
                    </th>
                    <th>
                        {{ "Description"|trans }}
                    </th>
                    <th>
                        {{ "Price"|trans }}
                    </th>
                    <th>
                        {{ "Qty"|trans }}
                    </th>
                    <th>
                        {{ "Tax"|trans }}
                    </th>
                    <th>
                        {{ "Total"|trans }}
                    </th>
                </tr>
            </thead>

            <tbody>
                {% for item in quote.items %}
                    <tr>
                        <td>

                        </td>
                        <td>
                            {{ item.description }}
                        </td>
                        <td>
                            {{ item.price }}
                        </td>
                        <td>
                            {{ item.qty }}
                        </td>
                        <td>

                        </td>
                        <td>
                            {{ currency.format(item.total) }}
                        </td>
                    </tr>
                {% endfor %}
            </tbody>

            {% set discount = quote.total|percentage(quote.discount) %}
            <tfoot>
                <tr>
                    <td colspan="5" align="right" style="text-align:right">
                        <strong>{{ "Sub-Total"|trans }}</strong>
                    </td>
                    <td colspan="2" align="left">
                        <div class="quote-sub-total">
                            {{ currency.format(quote.total + discount) }}
                        </div>
                    </td>
                </tr>
                <tr>
                    <td colspan="5" align="right" style="text-align:right">
                        <strong>{{ "Discount"|trans }}</strong>
                    </td>
                    <td colspan="2" align="left">
                        <span class="text-error quote-discount">
                            {{ currency.format(-discount) }}
                        </span>
                    </td>
                </tr>
                <tr>
                    <td colspan="5" align="right" style="text-align:right">
                        <strong>{{ "Total"|trans }}</strong>
                    </td>
                    <td colspan="2" align="left">
                        <div class="quote-total">
                            {{ currency.format(quote.total) }}
                        </div>
                    </td>
                </tr>
            </tfoot>
        </table>
    </div>
{% endblock content %}
