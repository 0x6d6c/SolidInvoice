{% set parent = "CSBillCoreBundle:Layout:three_column.html.twig" %}

{% extends "CSBillDataGridBundle:Grid:default.html.twig" %}

{% block title %}{{ "quote.list.title"|trans }}{% endblock %}

{% block sidebar_left %}
    {{ menu('quotes_index') }}
{% endblock sidebar_left %}

{% block content %}

    {{ parent() }}

    <h5>{{ "quote.list.status_legend"|trans }}</h5>

    {% for status in status_list %}
        {{ quote_label(status) }}
    {% endfor %}

{% endblock content %}

{% block sidebar_right %}
    <div class="well well-small right-nav">
        <a class="btn btn-lg btn-info action-button" href="{{ path("_quotes_create") }}">
            {{ icon('file', ['text', 'o']) }} {{ "quote.create"|trans }}
        </a>

        <ul class="nav nav-list">
            {% for status, count in status_list_count %}
                <li>
                    <label class="badge">
                        {{ count }}
                    </label>

                    {{ ('quote.stats.count.' ~ status)|transchoice(count) }}
                </li>
            {% endfor %}
        </ul>
    </div>
{% endblock sidebar_right %}
