{% extends 'APYDataGridBundle::blocks.html.twig' %}

{# ------------------------------------------------------ grid ------------------------------------------------------ #}
{% block grid %}
    <div class="grid">
        {% if grid.totalCount > 0 or grid.isFiltered or grid.noDataMessage is sameas(false) %}
            <form id="{{ grid.hash }}" action="{{ grid.routeUrl }}" method="post">

                <div class="grid_header">

                </div>

                <div class="grid_body">
                    <div class="pull-right">
                        <div class="btn-group btn-group-sm" role="group">
                            <a href="#" class="btn btn-default disabled">
                                {{ icon('check') }} Active
                            </a>

                            <a href="#" class="btn btn-default">
                                {{ icon('archive') }} Archived
                            </a>

                            <a href="#" class="btn btn-default">
                                {{ icon('times') }} Deleted
                            </a>
                        </div>
                    </div>

                    {% if grid.massActions|length > 0 %}
                        {{ grid_actions(grid) }}
                        <input type="hidden" id="{{ grid.hash }}_mass_action_all" name="{{ grid.hash }}[{{ constant('APY\\DataGridBundle\\Grid\\Grid::REQUEST_QUERY_MASS_ACTION_ALL_KEYS_SELECTED') }}]" value="0"/>
                    {% else %}
                        <br class="clearfix" />
                    {% endif %}

                    <div class="rows">
                        <div class="panel panel-primary filterable">
                            <div class="panel-heading">

                                <h3 class="panel-title">
                                    {% if grid.massActions|length > 0 %}
                                        {% for key, massAction in grid.massActions %}
                                            <button type="submit" value="{{ key }}" class="btn btn-warning btn-xs" name="{{ grid.hash }}[{{ constant('APY\\DataGridBundle\\Grid\\Grid::REQUEST_QUERY_MASS_ACTION') }}]">
                                                {% if massAction.icon is not empty %}
                                                    {{ icon(massAction.icon) }}
                                                {% endif %}

                                                {{ massAction.title|trans }}
                                            </button>
                                        {% endfor %}

                                        {#<button class="btn btn-warning btn-xs">
                                            {{ icon('archive') }} Archive
                                        </button>
                                        <button class="btn btn-danger btn-xs">
                                            {{ icon('times') }} Delete
                                        </button>#}
                                    {% endif %}
                                    <div class="pull-right">
                                        <div class="dropdown">
                                            <button class="btn btn-default btn-xs btn-filter dropdown-toggle" id="dropdownMenu1" data-toggle="dropdown" aria-expanded="true">
                                                {% if grid.filters.filterActive %}
                                                    <span class="text-danger">
                                                        {{ icon('filter') }}
                                                    </span>
                                                {% else %}
                                                    {{ icon('filter') }}
                                                {% endif %}
                                                Filter
                                            </button>
                                            <ul class="dropdown-menu dropdown-menu-right" role="menu" aria-labelledby="dropdownMenu1">
                                                {#<li role="presentation"><a role="menuitem" tabindex="-1" href="#">Action</a></li>
                                                <li role="presentation"><a role="menuitem" tabindex="-1" href="#">Another action</a></li>
                                                <li role="presentation"><a role="menuitem" tabindex="-1" href="#">Something else here</a></li>
                                                <li role="presentation"><a role="menuitem" tabindex="-1" href="#">Separated link</a></li>#}

                                                {% for filter in grid.filters %}
                                                    <li role="presentation"{% if filter.active %} class="active"{% endif %}>
                                                        <a role="menuitem" tabindex="-1" href="{{ path(app.request.get('_route'), query|merge({'filter' : filter.name})) }}">
                                                            {{ filter|trans }}
                                                        </a>
                                                    </li>
                                                {% endfor %}
                                            </ul>
                                        </div>
                                    </div>
                                    <br class="clearfix" />
                                </h3>
                            </div>
                            <div class="panel-body">
                                {#<input type="text" class="form-control" placeholder="Search Clients" />#}
                                <div class="input-group">
                                    <input name="search" placeholder="Search" type="text" id="search" class="form-control" value="{{ grid.searchString }}" />
                                    <span class="input-group-btn">
                                        <div class="btn-group">
                                            <button type="submit" class="btn btn-default"><i class="fa fa-search"></i> Search</button>
                                        </div>
                                    </span>
                                </div>

                                {#{{ grid_search(grid, 'CSBillDataGridBundle::grid.html.twig') }}#}

                            </div>
                            <table class="table table-bordered table-striped table-hover">
                                {% if grid.isTitleSectionVisible %}
                                    {{ grid_titles(grid) }}
                                {% endif %}

                                {#{% if grid.isFilterSectionVisible %}
                                    {{ grid_filters(grid) }}
                                {% endif %}#}

                                {{ grid_rows(grid) }}
                            </table>
                        </div>
                    </div>
                </div>

                <div class="grid_footer">
                    {% if grid.isPagerSectionVisible %}
                        {{ grid_pager(grid) }}
                    {% endif %}

                    {% if grid.exports|length > 0 %}
                        {{ grid_exports(grid) }}
                    {% endif %}

                    {% if grid.tweaks|length > 0 %}
                        {{ grid_tweaks(grid) }}
                    {% endif %}
                </div>

                {% if withjs %}
                    {{ grid_scripts(grid) }}
                {% endif %}

            </form>
        {% else %}
            {{ grid_no_data(grid) }}
        {% endif %}
    </div>
{% endblock grid %}

{# -------------------------------------------------- grid_search -------------------------------------------------- #}
{% block grid_search %}
    {% if grid.isFilterSectionVisible %}
        <div class="grid-search" id="{{ grid.hash }}_grid_search">
            <form id="{{ grid.hash }}_search" action="{{ grid.routeUrl }}" method="post" class="form-inline" role="form">
                <div class="control-group">
                    {% for column in grid.columns %}
                        {% if column.visible(true) and column.isFilterable %}
                            {% set columnTitle = grid.prefixTitle ~ column.title %}
                            {% if column.filterable %}
                                <div class="{{ cycle(['odd', 'even'], loop.index) }}">
                                    <div class="controls">
                                        <label class="control-label">{{ columnTitle|trans }}</label>
                                        {{ grid_filter(column, grid, false)|raw }}
                                    </div>
                                </div>
                            {% endif %}
                        {% endif %}
                    {% endfor %}

                    <div class="grid-search-action">
                        <a href="#" class="grid-search-submit btn btn-info" onclick="$('#{{ grid.hash }}_search').submit()">{{ icon('search') }} {{ 'Search'|trans }}</a>
                        <input type="button" class="grid-search-reset btn btn-warning" value="{{ 'Reset'|trans }}" onclick="return {{ grid.hash }}_reset();"/>
                        &nbsp;&nbsp;&nbsp;&nbsp;<a href="#" id="grid-simple-search">{{ 'Simple Search'|trans  }}</a>
                    </div>
                </div>
            </form>
        </div>
    {% endif %}
{% endblock grid_search %}

