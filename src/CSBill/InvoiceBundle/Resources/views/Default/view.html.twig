{% extends "CSBillCoreBundle:Layout:one_column_left.html.twig" %}

{% block page_title %}{{ "Invoice #%id"|trans|replace({"%id" : invoice.id}) }}{% endblock page_title %}
{% block title %}{{ block('page_title') }} <small>{{ status_label(invoice.status) }}</small>{% endblock %}

{% block sidebar %}
    {{ menu('invoices_view') }}
{% endblock sidebar %}

{% block content %}

    {# TODO : add toolbar #}
    <div class="pull-right">
        <div class="btn-toolbar">
            <div class="btn-group">
                {% if invoice is not paid %}
                    <a href="{{ path('_pay_invoice', {'id' : invoice.id}) }}" id="pay-now" class="btn btn-success">{{ "mark_paid"|trans }}</a>
                {% endif %}
                <a href="{{ path('_send_invoice', {'id' : invoice.id}) }}" class="btn btn-info">{{ icon('envelope-o') }} {{ "Send"|trans }}</a>
            </div>

            {% if invoice is draft or invoice is pending %}
                <div class="btn-group">
                    {% if paymentsConfigured() and invoice is pending %}
                        <a href="{{ path('_payments_create', {'uuid' : invoice.uuid}) }}" class="btn btn-primary">{{ icon('credit-card') }} {{ "pay_now"|trans }}</a>
                    {% endif %}
                    <a href="{{ path('_cancel_invoice', {'id' : invoice.id}) }}" class="btn btn-warning">{{ "Cancel"|trans }}</a>
                </div>
            {% endif %}

            {% if invoice is not paid %}
                <div class="btn-group">
                    <a href="{{ path('_invoices_edit', {'id' : invoice.id}) }}" class="btn btn-default">{{ icon('edit') }} {{ "Edit"|trans }}</a>
                </div>
            {% endif %}
        </div>

        <br class="clear" />
    </div>

    {% include "CSBillInvoiceBundle::invoice_template.html.twig" with {"link_client" : true} %}

    {% if invoice.notes is not empty %}

        <br class="clear" />
        <div>
            <strong>{{ 'notes'|trans }}</strong>
            <p>
                {{ invoice.notes }}
            </p>
        </div>
    {% endif %}

    {% if paymentsConfigured() %}

        {% if payments|length > 0 %}
            <div class="col-md-10">
                <hr />
                <h3>{{ 'payments'|trans }}</h3>
                {% include "CSBillPaymentBundle:Payment:list.html.twig" with {"payments" : payments, 'show_invoice' : false} only %}
            </div>
        {% endif %}

        <div class="modal fade" id="payment-modal" tabindex="-1" role="dialog" aria-labelledby="payment-modal-label" aria-hidden="true">
            <div class="modal-content">
                <div class="modal-header">
                    <button type="button" class="close" data-dismiss="modal" aria-hidden="true">&times;</button>
                    <h4 class="modal-title" id="payment-modal-label">{{ 'add_payment'|trans }}</h4>
                </div>
                <div class="modal-body">
                    <p>{{ 'capture_payment_question'|trans }}</p>
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-default" data-dismiss="modal">{{ 'close'|trans }}</button>
                    <a href="{{ path('_pay_invoice', {'id' : invoice.id}) }}" class="btn btn-success">{{ 'mark_paid'|trans }}</a>
                    <a href="{{ path('_payments_create', {'uuid' : invoice.uuid}) }}" class="btn btn-primary">{{ 'capture_payment'|trans }}</a>
                </div>
            </div>
        </div>
    {% endif %}
{% endblock content %}

{% block script %}
    {% if paymentsConfigured() %}
        $('#pay-now').on('click', function(event) {
            event.preventDefault();

            $('#payment-modal').modal();
        });
    {% endif %}
{% endblock script %}
