{% if invoices is not empty %}
    <div class="col-md-6">
        <div class="panel panel-default">
            <div class="panel-heading">
                {{ 'Recent Invoices'|trans }}
            </div>
            <table class="table table-striped table-bordered">
                <tr>
                    <th>{{ 'id'|trans }}</th>
                    <th>{{ 'client'|trans }}</th>
                    <th>{{ 'status'|trans }}</th>
                    <th>{{ 'total'|trans }}</th>
                    <th>{{ 'discount'|trans }}</th>
                    <th>{{ 'created'|trans }}</th>
                </tr>
                {% for invoice in invoices %}
                    <tr>
                        <td>
                            <a href="{{ path('_invoices_view', {'id' : invoice.id}) }}">{{ invoice.id }}</a>
                        </td>
                        <td>
                            <a href="{{ path('_clients_view', {'id' : invoice.client_id}) }}">{{ invoice.client }}</a>
                        </td>
                        <td>
                            {{ status_label(invoice) }}
                        </td>
                        <td>
                            {{ invoice.total|currency }}
                        </td>
                        <td>
                            {{ invoice.discount * 100 }}%
                        </td>
                        <td>
                            {{ invoice.created|date }}
                        </td>
                    </tr>
                {% endfor %}
            </table>
        </div>
    </div>
{% endif %}