<div class="col-md-6">
    <div class="panel panel-default">
        <div class="panel-heading">
            <div class="pull-right">
                {% if invoices is not empty %}
                    <a href="{{ path('_invoices_index') }}">
                        {{ 'invoice.dashboard.view_all'|trans }}
                    </a>
                {% endif %}
            </div>
            <h3 class="panel-title">
                {{ icon('file-text-o') }} {{ 'invoice.dashboard.recent'|trans }}
            </h3>
        </div>
        {% if invoices is not empty %}
            <table class="table table-striped table-bordered">
                <tr>
                    <th>{{ 'invoice.dashboard.grid.id'|trans }}</th>
                    <th>{{ 'invoice.dashboard.grid.client'|trans }}</th>
                    <th>{{ 'invoice.dashboard.grid.status'|trans }}</th>
                    <th>{{ 'invoice.dashboard.grid.total'|trans }}</th>
                    <th>{{ 'invoice.dashboard.grid.discount'|trans }}</th>
                    <th>{{ 'invoice.dashboard.grid.created'|trans }}</th>
                </tr>
                {% for invoice in invoices %}
                    <tr>
                        <td>
                            <a href="{{ path('_invoices_view', {'id' : invoice.id}) }}">{{ invoice.id }}</a>
                        </td>
                        <td>
                            <a href="{{ path('_clients_view', {'id' : invoice.client_id}) }}">{{ invoice.client }}</a>
                        </td>
                        <td>
                            {{ status_label(invoice) }}
                        </td>
                        <td>
                            {{ invoice.total|currency }}
                        </td>
                        <td>
                            {{ invoice.discount * 100 }}%
                        </td>
                        <td>
                            {{ invoice.created|date }}
                        </td>
                    </tr>
                {% endfor %}
            </table>
        {% else %}
            <div class="panel-body">
                <a href="{{ path('_invoices_create') }}">
                    {{ 'invoice.dashboard.create'|trans }}
                </a>
            </div>
        {% endif %}
    </div>
</div>
