<div class="col-md-6">
    <div class="panel panel-default">
        <div class="panel-heading">
            <div class="pull-right">
                {% if clients is not empty %}
                    <a href="{{ path('_clients_index') }}">
                        {{ 'client.dashboard.view_all'|trans }}
                    </a>
                {% endif %}
            </div>
            <h3 class="panel-title">
                {{ icon('group') }} {{ 'client.dashboard.recent'|trans }}
            </h3>
        </div>
        {% if clients is not empty %}
            <table class="table table-striped table-bordered">
                <tr>
                    <th>{{ 'client.dashboard.grid.id'|trans }}</th>
                    <th>{{ 'client.dashboard.grid.name'|trans }}</th>
                    <th>{{ 'client.dashboard.grid.status'|trans }}</th>
                    <th>{{ 'client.dashboard.grid.website'|trans }}</th>
                    <th>{{ 'client.dashboard.grid.created'|trans }}</th>
                </tr>
                {% for client in clients %}
                    <tr>
                        <td>
                            <a href="{{ path('_clients_view', {'id' : client.id}) }}">
                                {{ client.id }}
                            </a>
                        </td>
                        <td>
                            {{ client.name }}
                        </td>
                        <td>
                            {{ status_label(client) }}
                        </td>
                        <td>
                            {% if client.website is not empty %}
                                <a href="{{ client.website }}" rel="external">
                                    {{ client.webste }}
                                </a>
                            {% endif %}
                        </td>
                        <td>
                            {{ client.created|date }}
                        </td>
                    </tr>
                {% endfor %}
            </table>
        {% else %}
            <div class="panel-body">
                <a href="{{ path('_clients_add') }}">
                    {{ 'client.dashboard.create'|trans }}
                </a>
            </div>
        {% endif %}
    </div>
</div>
