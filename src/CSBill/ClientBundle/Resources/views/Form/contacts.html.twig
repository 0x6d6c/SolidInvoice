{% import "CSBillCoreBundle:Form:macro.html.twig" as _macro %}

<div class="well">

    <div class="child row-fluid">
        <div class="span6">
            {{ form_row(form.firstname) }}
        </div>
        <div class="span6">
            {{ form_row(form.lastname) }}
        </div>
    </div>

    <div class="row-fluid">
        <div class="client_contact_details" data-prototype="{{ _macro.widget_prototype(form.details, '', {"trash" : {"class" : "trash pull-left"}})|escape }}" data-prototype-name="{{ form.details.vars.prototype.name }}">
            {% for widget in form.details.children %}
                {{ _macro.widget_prototype(widget, '', {"trash" : {"class" : "trash pull-left"}}) }}
            {% endfor %}
        </div>

        <a href="#" data-target="client_contact_details" class="btn-add add_form_collection_link"><i class="icon-plus-sign"></i> {{ "Add Contact Detail"|trans }}</a>
    </div>


    {{ form_errors(form) }}
</div>