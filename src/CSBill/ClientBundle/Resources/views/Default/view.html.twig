{% extends "CSBillCoreBundle:Layout:three_column.html.twig" %}

{% block page_title %}
    {{ client.name }}
{% endblock page_title %}

{% block title %}
    {{ block('page_title') }} <small>{{ status_label(client.status) }}</small>
{% endblock title %}

{% block sidebar_left %}
	{{ menu('clients_view') }}
{% endblock sidebar_left %}

