{% extends "CSBillCoreBundle:Layout:three_column.html.twig" %}

{% block page_title %}
    {{ client.name }}
{% endblock page_title %}

{% block title %}
    {{ block('page_title') }} <small>{{ status_label(client.status) }}</small>
{% endblock title %}

{% block sidebar_left %}
	{{ menu('clients_view') }}
{% endblock sidebar_left %}

{% block content %}

    {% set totalAddresses = client.addresses|length %}

    <div id="client-view">
        <div class="row">
            <div class="col-md-6 col-lg-6">
                {% if client.website %}
                    {{ icon('external-link') }} <a href="{{ client.website }}" rel=external">{{ client.website }}</a>
                {% endif %}
            </div>

            <div class="col-md-6 col-lg-6" align="right">
                <a href="{{ path('_clients_edit', {'id' : client.id}) }}" class="btn btn-warning">
                    {{ icon('edit') }} {{ "edit"|trans }}
                </a>
                <a href="{{ path('_clients_delete', {'id' : client.id}) }}" class="btn btn-danger" id="delete-client">
                    {{ icon('trash-o') }} {{ "delete"|trans }}
                </a>
            </div>
        </div>

        <div class="row">
            <div class="col-lg-{{ totalAddresses > 0 ? 6 : 12 }} col-md-{{ totalAddresses > 0 ? 6 : 12 }} client_contact_list">
                <legend>
                    <h3>
                        {{ icon('users') }} {{ "contacts"|trans }}
                    </h3>
                </legend>

                <div id="client-contacts-list">
                    {% for contact in client.contacts %}
                        {% if totalAddresses == 0 %}
                            <div class="col-lg-6 col-md-6 client_contact_list">
                        {% endif %}

                            {% include "CSBillClientBundle::contact_card.html.twig" %}

                        {% if totalAddresses == 0 %}
                            </div>
                        {% endif %}
                    {% endfor %}
                </div>
                <div id="contacts-ajax-modal" class="modal fade" tabindex="-1"></div>
                </div>
            {% if totalAddresses > 0 %}
                <div class="col-lg-6 col-md-6">

                    <legend>
                        <h3>
                            {{ icon('building-o') }} {{ "client.addresses"|trans }}
                        </h3>
                    </legend>

                    <div id="client-address-list">

                        <ul class="list-group">
                        {% for address in client.addresses %}
                            <li class="list-group-item">
                                {{ address }}
                            </li>
                        {% endfor %}
                        </ul>
                    </div>
                </div>
            {% endif %}
        </div>

        <div class="row">
            <div class="col-lg-6 col-md-6">
                {% include "CSBillClientBundle::invoice_list.html.twig" %}
            </div>

            <div class="col-lg-6 col-md-6">
                {% include "CSBillClientBundle::quote_list.html.twig" %}
            </div>
        </div>

        {% if paymentsConfigured() and payments|length > 0 %}
            <div class="row">
                <div class="col-md-12">
                    <legend>
                        <h3>{{ 'payments'|trans }}</h3>
                    </legend>

                    {% include "CSBillPaymentBundle:Payment:list.html.twig" with {"payments" : payments, "show_invoice" : true} only %}
                </div>
            </div>
        {% endif %}
    </div>

{% endblock content %}

{% block sidebar_right %}

    <div class="widget">
        <div class="text-center client-actions">
            <a href="{{ path("_quotes_create", {"client" : client.id}) }}" class="btn btn-info btn-lg">
                {{ icon('file', ['text', 'o']) }} {{ "create_quote"|trans }}
            </a>
            <a href="{{ path("_invoices_create", {"client" : client.id}) }}" class="btn btn-info btn-lg">
                {{ icon('file', ['text', 'o']) }} {{ "create_invoice"|trans }}
            </a>
            <a href="{{ path("_clients_add_contact", {"id" : client.id}) }}" class="btn btn-success btn-lg add-contact-button" data-id="{{ client.id }}">
                {{ icon('user') }} {{ "add_contact"|trans }}
            </a>
        </div>
        <div class="row">
            <div class="col-lg-6 col-md-6 text-success text-center">
                <h3>{{ invoice_manager.totalIncome(client)|currency }}</h3>
                {{ "income"|trans }}
            </div>
            <div class="col-lg-6 col-md-6 text-danger text-center">
                <h3>{{ invoice_manager.totalOutstanding(client)|currency }}</h3>
                {{ "outstanding"|trans }}
            </div>
        </div>
        <br class="clearfix" />
        <ul class="nav nav-list">
            <li>
                <span rel="tooltip" title="{{ "total_quotes"|trans }}" class="badge">
                    {{ client.quotes|length }}
                </span>
                {{ "number_quotes"|transchoice(client.quotes|length) }}
            </li>
            <li>
                <span rel="tooltip" title="{{ "total_invoices"|trans }}" class="badge">
                    {{ client.invoices|length }}
                </span>
                {{ "number_invoices"|transchoice(client.invoices|length) }}
            </li>
            <li class="divider"></li>
            <li>
                <span class="badge" rel="tooltip" title="{{ "total_outstanding"|trans }}">
                    {{ invoice_manager.count('pending', client) }}
                </span>
                {{ "outstanding_invoices"|trans }}
            </li>
            <li>
                <span class="badge" rel="tooltip" title="{{ "total_paid"|trans }}">
                    {{ invoice_manager.count('paid', client) }}
                </span>
                {{ "paid_invoices"|trans }}
            </li>
        </ul>
    </div>
{% endblock sidebar_right %}
