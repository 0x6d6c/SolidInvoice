{% extends "CSBillCoreBundle:Layout:default.html.twig" %}

{% block body %}
	<div class="row-fluid">
		<aside class="span2">
			{{ block('sidebar_left') }}
		</aside>

		<section class="span10 content">
			{{ block('heading') }}

            <div class="row-fluid">
                <div class="span9">
                    {{ block('content') }}
                </div>
                <aside class="span3">
                    {{ block('sidebar_right') }}
                </aside>
            </div>
		</section>
	</div>

	<hr />
{% endblock body %}
