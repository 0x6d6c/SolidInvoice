<div class="col-md-6">
    <div class="panel panel-default">
        <div class="panel-heading">
            <div class="pull-right">
                {% if payments is not empty %}
                    <a href="{{ path('_payments_index') }}">
                        {{ 'client.dashboard.view_all'|trans }}
                    </a>
                {% endif %}
            </div>
            <h3 class="panel-title">
                {{ icon('credit-card') }} {{ 'payment.dashboard.recent'|trans }}
            </h3>
        </div>
        {% if payments is not empty %}
            <table class="table table-striped table-bordered">
                <tr>
                    <th>{{ 'payment.dashboard.grid.id'|trans }}</th>
                    <th>{{ 'payment.dashboard.grid.client'|trans }}</th>
                    <th>{{ 'payment.dashboard.grid.invoice'|trans }}</th>
                    <th>{{ 'payment.dashboard.grid.status'|trans }}</th>
                    <th>{{ 'payment.dashboard.grid.method'|trans }}</th>
                    <th>{{ 'payment.dashboard.grid.total'|trans }}</th>
                    <th>{{ 'payment.dashboard.grid.created'|trans }}</th>
                </tr>
                {% for payment in payments %}
                    <tr>
                        <td>
                            {{ payment.id }}
                        </td>
                        <td>
                            <a href="{{ path('_clients_view', {'id' : payment.client_id}) }}">
                                {{ payment.client }}
                            </a>
                        </td>
                        <td>
                            <a href="{{ path('_invoices_view', {'id' : payment.invoice}) }}">
                                {{ payment.invoice }}
                            </a>
                        </td>
                        <td>
                            {{ status_label(payment) }}
                        </td>
                        <td>
                            {{ payment.method }}
                        </td>
                        <td>
                            {{ payment.amount|currency }}
                        </td>
                        <td>
                            {{ payment.created|date }}
                        </td>
                    </tr>
                {% endfor %}
            </table>
        {% else %}
            <div class="panel-body">
                {{ 'payment.dashboard.no_payments'|trans }}
            </div>
        {% endif %}
    </div>
</div>
