{% if payments is not empty %}
    <div class="col-md-6">
        <div class="panel panel-default">
            <div class="panel-heading">
                {{ 'Recent Payments'|trans }}
            </div>
            <table class="table table-striped table-bordered">
                <tr>
                    <th>{{ 'id'|trans }}</th>
                    <th>{{ 'client'|trans }}</th>
                    <th>{{ 'invoice'|trans }}</th>
                    <th>{{ 'status'|trans }}</th>
                    <th>{{ 'method'|trans }}</th>
                    <th>{{ 'total'|trans }}</th>
                    <th>{{ 'completed'|trans }}</th>
                    <th>{{ 'created'|trans }}</th>
                </tr>
                {% for payment in payments %}
                    <tr>
                        <td>
                            {{ payment.id }}
                        </td>
                        <td>
                            <a href="{{ path('_clients_view', {'id' : payment.client_id}) }}">{{ payment.client }}</a>
                        </td>
                        <td>
                            <a href="{{ path('_invoices_view', {'id' : payment.invoice}) }}">{{ payment.invoice }}</a>
                        </td>
                        <td>
                            {{ status_label(payment) }}
                        </td>
                        <td>
                            {{ payment.method }}
                        </td>
                        <td>
                            {{ payment.amount|currency }}
                        </td>
                        <td>
                            {{ payment.completed|date }}
                        </td>
                        <td>
                            {{ payment.created|date }}
                        </td>
                    </tr>
                {% endfor %}
            </table>
        </div>
    </div>
{% endif %}
